<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/row_pon1"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textStyle="bold"
                    android:text="PONEDELJEK"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:id="@+id/text_pon1"
                        android:padding="20dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />
                    <RatingBar
                        android:id="@+id/rating_bar_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"/>

                </LinearLayout>


            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:id="@+id/row_tor1"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textStyle="bold"
                    android:text="TOREK"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:id="@+id/text_tor1"
                        android:padding="20dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />
                    <RatingBar
                        android:id="@+id/rating_bar_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"/>

                </LinearLayout>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:id="@+id/row_sre1"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textStyle="bold"
                    android:text="SREDA"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:id="@+id/text_sre1"
                        android:padding="20dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />
                    <RatingBar
                        android:id="@+id/rating_bar_33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"/>

                </LinearLayout>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:id="@+id/row_cet1"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:textStyle="bold"
                    android:text="ÄŒETRTEK"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"/>
