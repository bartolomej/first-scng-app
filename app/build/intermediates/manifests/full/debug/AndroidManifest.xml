<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.scng.scng"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/scng"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="si.scng.scng.MainActivity"
            android:label="SCNG"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="si.scng.scng.MenuActivity"
            android:parentActivityName="si.scng.scng.MainActivity" />
        <activity
            android:name="si.scng.scng.KosiloActivity"
            android:parentActivityName="si.scng.scng.MainActivity" />
        <activity
            android:name="si.scng.scng.SettingsActivity"
            android:parentActivityName="si.scng.scng.MainActivity" />
        <activity
            android:name="si.scng.scng.FeedbackActivity"
            android:parentActivityName="si.scng.scng.MainActivity" />
        <activity
            android:name="si.scng.scng.UpdatesActivity"
            android:parentActivityName="si.scng.scng.MainActivity" />
    </application>

</manifest>